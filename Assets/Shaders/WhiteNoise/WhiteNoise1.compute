RWTexture2D<float4> ResultImage;
int textureWidth;
int textureHeight;
int seed;

[numthreads(blockWidth,blockHeight,1)]
void WhiteNoise1 (uint3 id : SV_DispatchThreadID)
{
    // cast to floats
    float2 texel = float2( id.x, id.y );

    // use our noise functions
    // clamping the seed more than 2 or less than -2
    float seedNoNearZero = (seed < 0)? ((seed > -2.0)?-2.0:seed) : ((seed < 2.0)?2.0:seed);
    float noiseVal = noise(hash(texel,seedNoNearZero),seedNoNearZero);

    // output over rgb
    ResultImage[id.xy] = float4(noiseVal, noiseVal, noiseVal, 1.0f);
}
